<h1>Shorten your URL</h1>

<form method="POST" action="">
<input type="text" name="longurl" required>
<input type="submit" value="Shorten URL">
</form>
<br/><br/>

<table class ="ui celled table">
    <tr>
        <th>Long URL</th>
        <th>Short URL</th>
        <th>No of clicks</th>
    </tr>
    {{#each urls}}
    <tr>
        <td>{{this.longurl}}</td>
        <td><a href="/:{{this.shorturl}}">{{this.shorturl}}</a></td>
        <td>{{this.count}}</td>
    </tr>
    {{/each}}
</table>
